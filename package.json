{
  "name": "watchelement",
  "version": "0.1.2",
  "description": "A React HOC for managing component visibility by watching external DOM elements",
  "module": ".es.js",
  "main": ".js",
  "umd:main": ".umd.js",
  "scripts": {
    "build": "microbundle src/*.js -o x.js",
    "eslint": "eslint src",
    "prepare": "npm t",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "test": "npm run eslint && jest"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      "transform-react-jsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    },
    "rules": {
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/prop-types": 0
    }
  },
  "keywords": [],
  "repository": "fuhton/watchElement",
  "author": "Nicholas Smith <fuhton@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "prop-types": "*",
    "react": "*"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "microbundle": "^0.4.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.3.1"
  },
  "dependencies": {}
}
